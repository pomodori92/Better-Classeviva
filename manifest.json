{
  "manifest_version": 3,
  "name": "Better Classeviva",
  "version": "1.1",
  "description": "Migliora l'aspetto e l'usabilit√† del portale web.spaggiari.eu",

  "icons": {
    "16": "icons/classeviva-icon-16.png",
    "48": "icons/classeviva-icon-48.png",
    "128": "icons/classeviva-icon-128.png"
  },

  "action": {
    "default_title": "Better Classeviva",
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "tabs", "scripting", "activeTab"],

  "content_scripts": [
    {
      "matches": ["https://web.spaggiari.eu/*"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://web.spaggiari.eu/ngs_vew/app/default/cartellino_utente.php"],
      "js": ["js/timecard.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "js/background.js",
    "scripts": ["background.js"]
  },

  "options_page": "settings.html",

  "web_accessible_resources": [
    {
      "resources": ["fonts/*", "css/*"],
      "matches": ["https://web.spaggiari.eu/*"]
    }
  ]
}
